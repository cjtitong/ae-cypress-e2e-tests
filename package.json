{
  "name": "ae-cypress",
  "version": "1.0.0",
  "scripts": {
    "test:open": "cypress open",
    "test:run": "cypress run",
    
    
    "test:ci": "npm run clean:reports && npx cypress run --headless --browser chrome && npm run merge-reports && npm run generate-report",
    
    "merge-reports": "npx mochawesome-merge results/mochawesome/*.json -o results/mochawesome/mochawesome.json",
    "generate-report": "npx mochawesome-report-generator results/mochawesome/mochawesome.json -o results/mochawesome/html",
    "clean:reports": "rimraf results/mochawesome || true",
    
    "lint:js": "eslint ./cypress --ext .js",
    
    
    "test:junit": "cypress run --reporter mocha-junit-reporter --reporter-options mochaFile=results/junit/test-results-[hash].xml,toConsole=true"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.0",
    "cypress": "^15.2.0",
    "eslint": "^8.0.0",
    "mocha-junit-reporter": "^2.2.1",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.3.0"
  }
}
